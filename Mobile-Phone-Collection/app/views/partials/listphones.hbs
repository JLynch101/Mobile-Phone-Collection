<table class="ui fixed table">
  <thead>
    <tr>
      <th class="six wide">Model</th>
      <th class="six wide">Memory</th>
      <th class="two wide"> </th>
      <th class="two wide"> </th>
    </tr>
  </thead>
<tbody>
    {{#each device.phones}}
    <form class = "ui form" action="/device/{{../device.id}}/updatephone/{{id}}" method="POST">
    <tr class="fields">
      <td class="field">
        <span class="ui input">
         <input placeholder="Title" type="text" size = "30" name="title" autofocus required value = "{{title}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input placeholder="64GB" type="text" size = "30" name="memory" required value = "{{memory}}">
        </span>
      </td>
      <td>
        <button class="ui submit icon button"><i class="icon pencil alternate"></i></button>
      </td>
      <td>
        <a href="/device/{{../device.id}}/deletephone/{{id}}" class="ui icon button delphone">
          <i class="icon trash"></i>
        </a>
      </td>
    </tr>
    </form> 
    {{/each}}
  </tbody>
</table>